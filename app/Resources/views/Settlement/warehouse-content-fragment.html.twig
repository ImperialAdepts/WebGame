{% extends 'Settlement/base.html.twig' %}

{% block subbody %}
	{% if resources|length > 0 %}
		<strong>Warehouse content:</strong>
		<ul>
			{% for portableResource in resources %}
				<li>
					{{ render(controller('PlanetBundle:ResourceDeposit:depositDetail', {
						'descriptor': portableResource.id,
					})) }}
				</li>
			{% endfor %}
		</ul>
	{% else %}
		<small>There is nothing in warehouse.</small>
	{% endif %}
	{% if warehouses|length > 0 %}
		<strong>Warehouses</strong>
		<small>Space capacity: {{ 0|volume }} / {{ 0|volume }} </small>
		<small>Weight capacity: {{ 0|weight }} / {{ 0|weight }} </small>
		<ul>
			{% for warehouse in warehouses %}
				<li>
					{{ render(controller('PlanetBundle:ResourceDeposit:depositDetail', {
						'descriptor': warehouse.id,
					})) }}
				</li>
			{% endfor %}
		</ul>
	{% else %}
		<small>There is no warehouses.</small>
	{% endif %}
{% endblock %}