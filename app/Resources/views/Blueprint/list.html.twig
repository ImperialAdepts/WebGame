{% extends 'base.html.twig' %}

{% block pagetitle %}Blueprints{% endblock %}
{% block pagedescription %}{% endblock %}

{% block body %}
    <ul>
        {% for concept, data in concepts %}
            <li>
                <strong>{{ data.label }}</strong> <a href="{{ path('blueprint_create', {'conceptName': concept}) }}">create new</a>,<br>
                {% for blueprint in data.blueprints %}
                    <a href="{{ path('blueprint_edit', {'blueprint': blueprint.id }) }}">{{ blueprint }}</a>,
                {% endfor %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}