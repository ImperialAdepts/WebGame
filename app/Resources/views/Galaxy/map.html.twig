{% import _self as this_macros %}

{#{{ this_macros.localGroup(currentSector.localGroup) }}#}

{% for line in sectors %}
    <div style="padding: 1px; float: left; border-color: #0088CC; border-width: 1px; border-style: solid;">
        {% for sector in line %}
            <div style="padding: 1px; float: left; border-color: #0088CC; border-width: 1px; border-style: solid; width: 300px; height: 300px;">
                {{ sector.encode }}<br>
            </div>
            <div style="clear: left"></div>
        {% endfor %}
    </div>
{% endfor %}

{% macro localGroup(localGroup) %}
        {% for x, line in localGroup.systems %}
                <div style="padding: 1px; float: left; border-color: #0088CC; border-width: 1px; border-style: solid;">
                        {% for y, systemStack in line %}
                                <div style="padding: 1px; float: left; border-color: #0088CC; border-width: 1px; border-style: solid; width: 40px; height: 40px;">
                                        {% for z, system in systemStack %}
                                                {% if system is not null %}
                                                        <a href="{{ path('solar_system_guess', {'systemAddress': system.sectorAddress, 'localGroupCoord': system.localGroupCoordination}) }}" title="{{ system.systemName }}">{{ z }}</a>,
                                                {% endif %}
                                        {% endfor %}
                                </div>
                                <div style="clear: left"></div>
                        {% endfor %}
                </div>
        {% endfor %}
{% endmacro %}
